<div>
  <% if posts_owner?(@user) %>
    <%= render "posts/post_form" %>
  <% end %>

  <% if @posts&.any? %>
    <div>
      <% @posts.each do |post| %>
        <p><%= post.body %></p>
        <% if posts_owner?(@user) %>
          <%= button_to "Delete", post_path(post), data: { confirm: 'Are you sure?', turbo_confirm: 'Are you sure?' }, method: :delete %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p><%= posts_owner?(@user) ? "You haven't" : "#{@user&.name} hasn't" %> posted anything yet.</p>
  <% end %>
</div>
