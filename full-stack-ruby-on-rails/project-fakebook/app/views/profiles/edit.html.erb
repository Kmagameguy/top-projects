<%= form_for([@user, @profile]) do |f| %>
  <div class="profile-form-input">
    <%= f.label :email, 'Email: This is the email address displayed on your public profile. You cannot change the email address associated with your login.' %>
    <%= f.text_field :email %>
  </div>

  <div class="profile-form-input">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div class="profile-form-input">
    <%= f.label :address1 %>
    <%= f.text_field :address1 %>
  </div>

  <div class="profile-form-input">
    <%= f.label :address2 %>
    <%= f.text_field :address2 %>
  </div>

  <div class="profile-form-input">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="profile-form-input">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="profile-form-input">
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  </div>

  <div class="profile-form-input">
    <%= f.label :birthday %>
    <%= f.date_field :birthday %>
  </div>

  <div class="profile-form-input">
    <%= f.label :bio %>
    <%= f.text_area :bio %>
  </div>

  <%= f.submit 'Update' %>
<% end %>
